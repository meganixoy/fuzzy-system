// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(cuid())
  firstName   String?
  lastName    String?
  email       String      @unique
  password    String  
  createdAt   DateTime
  updatedAt   DateTime    @updatedAt
  isVerified  Boolean     @default(false)
  stamp       Stamp?
  claim       Claim?

  @@index(fields: [id, isVerified])
}

model Stamp {
  id            Int       @id @default(autoincrement())
  essentials    String[]  
  food          String[]
  services      String[]
  user          User      @relation(fields: [userId], references: [id])
  userId        String    @unique

  @@index(fields: [userId])
}

model Tenant {
  id        Int     @id @default(autoincrement())
  name      String 
  url       String  @unique
  category  String
  code      Int

  @@index(fields: [name, url, category, code])
}

model Claim {
  id                   Int        @id @default(autoincrement())
  essentials           Boolean    @default(false)
  essentialsUpdatedAt  DateTime?  
  food                 Boolean    @default(false)
  foodUpdatedAt        DateTime?
  services             Boolean    @default(false)
  servicesUpdatedAt    DateTime?
  grand                Boolean    @default(false)
  grandUpdatedAt       DateTime?
  user                 User       @relation(fields: [userId], references: [id])
  userId               String     @unique

  @@index(fields: [userId, essentials, food, services])
}